<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_margin_height"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:padding="@dimen/tv_margin_1"
        android:text="@string/app_name"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/img_grid"
        android:layout_width="@dimen/layout_margin_width_1"
        android:layout_height="@dimen/layout_margin_height_1"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/tv_margin_left_and_right"
        android:padding="@dimen/tv_margin"
        tools:ignore="RtlHardcoded" />

</LinearLayout>